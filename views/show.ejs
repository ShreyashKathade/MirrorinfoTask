<% layout("/layouts/boilerplate") %>

<style>
   .cards {
    margin-top: 34px;
    gap: 15px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
   }
   .card {
    width: 100px;
   }
</style>


       
        <div class="col-md-4 mb-3">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text"><%= product.description %></p>
                    <p class="card-text">Status: <%= product.status %></p>
                    <p class="card-text">Created At: <%= new Date(product.createdAt).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></p>
                    <p class="card-text">Last Update: <%= new Date(product.lastUpdated).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></p>
                    
                    <!-- Link to update page with product ID -->
                    <a href="/edit/<%= product._id %>" class="btn btn-primary">Update</a>
                   
                <form action="/delete/<%= product._id %>">
                    <button type="submit"  class="btn btn-danger">Delete</button>
                </form>
                    
                    
                </div>
            </div>
        </div>
   
    </div>
</div>
