<% layout("/layouts/boilerplate") %>

<style>
    /* Custom styles for margin and padding */
    .card-container {
        margin-bottom: 20px;
    }

    .card {
        padding: 15px;
    }
</style>
<div class="container mt-5">
    <div class="row">
        <% if (errorMsg && errorMsg.length) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if (successMsg && successMsg.length) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4">
        <% products.forEach(product => { %>
            <div class="col mb-4 card-container">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.title %></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p class="card-text">Status: <%= product.status %></p>
                        <p class="card-text">Created At: <%= new Date(product.createdAt).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></p>
                        <p class="card-text">Last Update: <%= new Date(product.lastUpdated).toLocaleString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: 'numeric', minute: 'numeric', second: 'numeric', hour12: true }) %></p>
                        
                        <a href="/show/<%= product._id %>" class="btn btn-primary">Show</a>
                        
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
